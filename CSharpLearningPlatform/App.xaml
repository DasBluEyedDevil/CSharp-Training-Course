<Application x:Class="CSharpLearningPlatform.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources />
                <ui:XamlControlsResources />
            </ResourceDictionary.MergedDictionaries>

            <!-- Color Palette -->
            <SolidColorBrush x:Key="PrimaryBrush" Color="#0078D4"/>
            <SolidColorBrush x:Key="SuccessBrush" Color="#107C10"/>
            <SolidColorBrush x:Key="ErrorBrush" Color="#D13438"/>
            <SolidColorBrush x:Key="BackgroundBrush" Color="#F3F3F3"/>
            <SolidColorBrush x:Key="SidebarBrush" Color="#2D2D30"/>
            <SolidColorBrush x:Key="CodeBackgroundBrush" Color="#1E1E1E"/>

            <!-- Typography -->
            <Style x:Key="TitleTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Margin" Value="0,0,0,16"/>
            </Style>

            <Style x:Key="SubtitleTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Margin" Value="0,16,0,8"/>
            </Style>

            <Style x:Key="BodyTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
                <Setter Property="LineHeight" Value="22"/>
            </Style>

            <Style x:Key="CodeTextStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Consolas, Courier New, monospace"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Background" Value="{StaticResource CodeBackgroundBrush}"/>
                <Setter Property="Foreground" Value="#D4D4D4"/>
                <Setter Property="Padding" Value="12"/>
            </Style>

            <!-- Button Styles -->
            <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Padding" Value="16,8"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Style>

            <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Padding" Value="16,8"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
